    <%= f.number_field :winners_no %>
  </div>
  <div class="field">
    <%= f.label :open %><br />
    <%= f.check_box :open %>
  </div>
  <div class="field">
    <%= f.label :seed %><br />
    <%= f.number_field :seed %>
  </div>
  <div class="field">
    <%= f.label :owner_id %><br />
    <%= f.number_field :owner_id %>
  </div>
  <div class="field">
    <%= f.label :cost %><br />
    <%= f.text_field :cost %>
  </div>

  <div class="field">
    <%= f.label "Players id (separate with comma)" %><br />
    <%= f.text_field :players %>
  </div>

